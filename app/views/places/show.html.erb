<h2 class="card-title"><%= @place.address %></h2>

<%= link_to "Saved Addresses", places_path %>

<hr />

<div class="row">
  <label class="col-sm-1">Address</label>
  <span class="col-sm-2"><%= @place.address %></span>
</div>
<div class="row">
  <label class="col-sm-1">Latitude</label>
  <span class="col-sm-2"><%= @place.latitude %></span>
</div>
<div class="row">
  <label class="col-sm-1">Longitude</label>
  <span class="col-sm-2"><%= @place.longitude %></span>
</div>
<% if @cached %>
  <div class="col-sm-3 text-success">
    <i class="bi bi-check"></i>
    Cached
  </div>
<% else %>
  <div class="col-sm-3 text-warning">
    <i class="bi bi-radar"></i>
    Retrieved
  </div>
<% end %>

<div class="row">
  <% @dailies.each do |daily| %>
    <div class="card col-sm-3">
      <div class="card-body">
        <h5 class="card-title"><%= daily[:when] %></h5>

        <div class="row">
          <% daily[:temperatures].each_with_index do |temp, i| %>
            <div class="col">
              <%= i == 0 ? "High" : "Low" %>: <%= temp[:value] %>
              <%= image_tag(temp[:icon]) %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  <% end %>
</div>
