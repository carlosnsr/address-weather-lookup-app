<h2>Saved Addresses</h2>

<div class="row">
  <%= link_to "Look up weather at a new address", new_place_path %>
</div>

<hr/>

<% @places.each do |place| %>
  <div class="row">
    <div class="col-sm-1">
      <%= place.postal_code %>
    </div>
    <div class="col-sm-2">
      <%= link_to place.address, place %>
    </div>
    <div class="col-sm">
      (<%= place.latitude %>, <%= place.longitude %>)
    </div>
  </div>
<% end %>
